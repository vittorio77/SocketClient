<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vittorio.socketclient.MainActivity">

    <EditText
        android:id="@+id/valueEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Valore da inviare al server"
        app:layout_constraintLeft_toRightOf="@+id/portEditText"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/portEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Server port number"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="108dp"
        android:layout_height="48dp"
        android:text="Connect..."
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/portEditText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/connectButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/responseTextView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="..... risposta del server"
        app:layout_constraintTop_toBottomOf="@+id/clearButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
